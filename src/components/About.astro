---
interface Props {
  firstLetterOfFirstWord: string;
  restOfLettersAtFirstWord: string;
  firstLetterOfLastWord: string;
  restOfLettersAtLastWord: string;
  firstParagraph: string;
  secondParagraph: string;
  buttonText: string
  cvLink: string;

}

const { firstLetterOfFirstWord, restOfLettersAtFirstWord, firstLetterOfLastWord, restOfLettersAtLastWord, firstParagraph, secondParagraph, buttonText, cvLink } = Astro.props
---

<div
  id="about"
  class="bg-gradient-to-b from-slate-700 to-gray-900 w-full md:w-auto mt-20 p-10 md:p-32 rounded-lg text-center shadow lg:shadow-2xl"
>
  <h1
    class="text-center text-4xl md:text-6xl font-mono font-light text-white mt-[5rem] lg:mt-0"
  >
    <span class="text-red-500">{firstLetterOfFirstWord}</span>{restOfLettersAtFirstWord} <span class="text-red-500">{ firstLetterOfLastWord }</span>{ restOfLettersAtLastWord }
  </h1>
  <div class="flex flex-wrap justify-center flex-col lg:flex-row mt-10">
    <div class="xl:w-2/5 lg:w-full flex justify-center">
      <img
        src="/images/foto.webp"
        class="size-40 sm:size-80 border-collapse border-2 border-slate-300 rounded-full lg:rounded-2xl"
        alt="foto-perfil"
      />
    </div>

    <div class="xl:w-3/5 lg:w-full flex flex-col justify-start mt-10">
      <p class="text-justify text-md mb-10 text-slate-100 leading-7">
        { firstParagraph }
      </p>

      <p class="text-md text-justify mb-10 text-slate-200 leading-7">
       { secondParagraph }
      </p>
    </div>
  </div>

  <div class="flex justify-center xl:justify-end mt-5 mr-0 xl:mr-[15rem]">
    <a
      href=`${cvLink}`
      class="w-full xl:w-2/5 py-4 rounded-md cursor-pointer bg-slate-600 text-white hover:bg-gray-200 hover:text-gray-900 transition duration-200 ease-out"
    >
      { buttonText }</a
    >
  </div>
</div>
