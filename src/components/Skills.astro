---
import { SkillsData } from "../data/data"
const { list } = SkillsData[0]

interface Props {
    firstLetterOfWord: string;
    lastLetterOfWord: string;    
}

const { firstLetterOfWord, lastLetterOfWord } = Astro.props



---

<div id="skills" class="bg-gradient-to-b from-slate-700 to-gray-900 w-full md:w-auto p-5 md:p-32 rounded-lg text-center mt-20">
    <h1 class="text-center  mt-[5rem] lg:mt-0 text-4xl md:text-6xl font-mono font-light text-gray-900">
       <span class='text-red-500'>{ firstLetterOfWord }</span><span class='text-white'>{ lastLetterOfWord }</span>
    </h1>

    <div class="container mx-auto grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-20 mt-20">
        {list.map(skill => (
            <div class="flex flex-col items-center gap-1">
                <div>
                    <img class="flex justify-center w-32 h-32 md:w-40 md:h-40 rounded-xl" src={skill.icon} />
                </div>

                <div>
                    <p class="text-xl text-white">{skill.name}</p>
                </div>
            </div>
        ))}
    </div>

</div>